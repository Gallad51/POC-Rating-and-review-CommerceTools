{
  "name": "ratings-reviews-frontend",
  "version": "1.0.0",
  "description": "Frontend for ratings and reviews microservice - Vue.js components",
  "type": "module",
  "main": "./dist/ratings-reviews-components.umd.js",
  "module": "./dist/ratings-reviews-components.es.js",
  "types": "./dist/custom-elements.d.ts",
  "exports": {
    ".": {
      "types": "./dist/custom-elements.d.ts",
      "import": "./dist/ratings-reviews-components.es.js",
      "require": "./dist/ratings-reviews-components.umd.js"
    },
    "./style.css": "./dist/ratings-reviews-components.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:components && npm run build:demo",
    "build:lib": "vite build",
    "build:components": "vite build --config vite.config.webcomponents.ts",
    "build:demo": "cp public/index.html dist/index.html",
    "build:static": "echo 'Building static assets...' && mkdir -p dist && cp -r public/* dist/",
    "preview": "vite preview",
    "start": "node server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "vue": "^3.5.22",
    "express": "^4.18.2",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^19.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
