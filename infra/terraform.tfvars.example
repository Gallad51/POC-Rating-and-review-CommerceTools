# Example Terraform variables file
# Copy this file to terraform.tfvars and customize for your deployment

# GCP Project Configuration
project_id   = "your-gcp-project-id"
region       = "us-central1"
service_name = "ratings-reviews"
environment  = "dev"

# Docker Images (updated by CI/CD)
backend_image  = "gcr.io/your-gcp-project-id/backend:latest"
frontend_image = "gcr.io/your-gcp-project-id/frontend:latest"

# Secrets for Secret Manager (use actual values for production)
secrets = {
  "api-key"           = "your-actual-api-key"
  "db-password"       = "your-actual-db-password"
  "jwt-secret"        = "your-jwt-secret-key"
  "external-api-key"  = "your-external-service-key"
}

# Backend secret environment variables
backend_secrets = [
  {
    name        = "API_KEY"
    secret_name = "api-key"
    secret_key  = "latest"
  },
  {
    name        = "DB_PASSWORD"
    secret_name = "db-password"
    secret_key  = "latest"
  }
]